<%- include('header.ejs'); -%>

<!-- cart section end -->
<section class="cart-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-table">
                    <% if(item.length > 0){ %>
						<h3>All Orders</h3>
						
					<% }else{ %>
						<h3>No one has ordered anything yet!</h3>
                    <%}%>
                    

                    <div class="cart-table-warp">
                        <table style="border: #F51167;">
                            <thead>
                                <tr>
                                    <th class="product-th">Product</th>
                                    <th class="total-th">User Name</th>
                                    <th class="total-th">Contact</th>
                                    <th class="total-th">Price</th>
                                    <th class="total-th">Delivery Address</th>
                                    <th class="total-th">Status</th>
                                    <th class="total-th">Order Date</th>
                                    <th class="total-th">Delivery Date</th>
                                    <th class="total-th">Post Company</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(var i=0;i< item.length;i++){ %>
                                <tr style="margin-bottom: 100px;">
                                    <td class="product-col">
                                        <img src="img/product/<%=item[i].image%>" alt="">
                                        <div class="pc-title">
                                            <h4><%=item[i].name%></h4>
                                        </div>
                                    </td>
                                    <td class="total-col">
                                        <h4><%=item[i].UserName%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4><%=item[i].contact%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4><%=item[i].cost%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4><%=item[i].Address%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4 style="color: #F51167;"><%=item[i].orderStatus%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4><%=item[i].orderDate%></h4>
                                    </td>
                                    <td class="total-col">
                                        <h4>Not delivered</h4>
                                    </td>
                                    <td class="total-col">
                                        <h4>Blue Dart</h4>
                                    </td>
                                    <td class="total-col">
                                        <form action="/admin/changeStatus/<%=item[i].o_id%>" method="POST">
                                            <label for="status">Change Status:</label>
                                            <select name="status" id="status">
                                              <option value="Processing">Processing</option>
                                              <option value="Shipped">Shipped</option>
                                              <option value="On the Way">On the Way</option>
                                              <option value="Delivered">Delivered</option>
                                            </select>
                                            <input type="submit" value="Submit">
                                          </form>
                                    </td>
                                </tr>
                                <%}%>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- cart section end -->

<%- include('footer'); -%>